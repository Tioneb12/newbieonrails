<%= simple_form_for [:admin,@post] do |f| %>
  <%= f.error_notification %>
  <%= f.input :title %>
  <%= f.input :main_image,
              direct_upload: true,
              accept: 'image/png,image/gif,image/jpeg' %>
  <%= tinymce %>
  <%= f.input :body, as: :text, input_html: { class: "tinymce" , rows: 40, cols: 120 } %>
  <%= f.input :slug %>
  <%= f.input :statut %>
  <%= f.input :sub_category_id, collection: @sub_categories %>
  <%= f.date_field :created_at %>
  <%= f.date_field :updated_at %>
  <%= f.input :user_id %>
  <%= f.submit "Enregister" %>
<% end %>