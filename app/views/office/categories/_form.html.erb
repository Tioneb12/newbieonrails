<%= simple_form_for [:admin,@category] do |f| %>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :main_image,
              direct_upload: true,
              accept: 'image/png,image/gif,image/jpeg' %>
  <%= f.association :sub_themes, as: :check_boxes, collection: Category.all, input_html: { multiple: true } %>
  <%= tinymce %>
  <%= f.input :description, as: :text, input_html: { class: "tinymce" , rows: 40, cols: 120 } %>
  <%= f.input :slug %>
  <%= f.input :meta_title %>
  <%= f.input :meta_description %>
  <%= f.input :meta_robots_index %>
  <%= f.input :meta_robots_follow %>
  <%= f.submit "Enregister" %>
<% end %>